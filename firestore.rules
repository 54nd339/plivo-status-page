rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profiles can be read by authenticated users, but only written by the user themselves.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Organizations can be read by anyone. They can only be created by authenticated users.
    // They can only be updated by users whose UID is in the 'members' array of the document.
    match /organizations/{orgId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in resource.data.members;

      // Services can be read by anyone (for the public status page).
      // They can only be written to by members of the organization.
      match /services/{serviceId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/organizations/$(orgId)).data.members.hasAny([request.auth.uid]);
      }

      // Incidents can be read by anyone (for the public status page).
      // They can only be written to by members of the organization.
      match /incidents/{incidentId} {
        allow read: if true;
        allow write: if request.auth != null && get(/databases/$(database)/documents/organizations/$(orgId)).data.members.hasAny([request.auth.uid]);
      }
    }

  }
}